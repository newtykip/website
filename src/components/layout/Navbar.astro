---
import { Image } from "astro:assets";

import Theme from "@/components/layout/Theme.svelte";
import head from "@/content/images/head.png";
---

<nav class="bg-mantle py-2 select-none">
    <div class="flex items-center mx-auto w-3/5">
        <a href="/">
            <Image
                src={head}
                alt={Astro.site!.host}
                width={48}
                height={48}
                class="w-9 h-9"
                loading="eager"
            />
        </a>
        <div class="flex flex-grow justify-end gap-6">
            <a href="/" class="text-text">home</a>
            <a href="/blog" class="text-text">blog</a>
            <Theme client:load />
        </div>
    </div>
</nav>
